<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/root_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/page_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="শিক্ষা কেন্দ্র পরিদর্শনের তথ্য"
                    android:textAlignment="center"
                    android:textColor="@color/page_title"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:background="@drawable/border"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/invigilator_name_layout"
                    tools:ignore="RtlCompat">
                </TextView>

                <View
                    android:id="@+id/simple_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/page_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/invigilator_name_layout"
                    android:background="@color/black_00" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/invigilator_name_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/simple_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/invigilator_designation_layout"
                    android:layout_marginTop="10dp"
                    android:hint="পরিদর্শনকারীর নামঃ">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/invigilator_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:textColor="@color/black_80"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/invigilator_designation_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/invigilator_name_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/invigilator_district_spinner_layout"
                    android:layout_marginTop="10dp"
                    android:hint="পদবীঃ">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/invigilator_designation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:textColor="@color/black_80"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/invigilator_district_spinner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toBottomOf="@id/invigilator_designation_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/invigilator_upazila_spinner_layout"
                    android:background="@drawable/bg_stroke_spinner_background">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/invigilator_district_spinner"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:overlapAnchor="false"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/bg_stroke_spinner_background"
                        android:theme="@style/custom_spinner_style"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:entries="@array/invigilator_district" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="@id/invigilator_district_spinner"
                        app:layout_constraintEnd_toEndOf="@id/invigilator_district_spinner"
                        app:layout_constraintTop_toTopOf="@id/invigilator_district_spinner"
                        app:srcCompat="@drawable/spinner_arrow_drop_down"
                        tools:ignore="ContentDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/invigilator_upazila_spinner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toBottomOf="@id/invigilator_district_spinner_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/invigilator_date_layout"
                    android:background="@drawable/bg_stroke_spinner_background">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/invigilator_upazila_spinner"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:overlapAnchor="false"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/bg_stroke_spinner_background"
                        android:theme="@style/custom_spinner_style"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:entries="@array/invigilator_upazila" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="@id/invigilator_upazila_spinner"
                        app:layout_constraintEnd_toEndOf="@id/invigilator_upazila_spinner"
                        app:layout_constraintTop_toTopOf="@id/invigilator_upazila_spinner"
                        app:srcCompat="@drawable/spinner_arrow_drop_down"
                        tools:ignore="ContentDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/invigilator_date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toBottomOf="@id/invigilator_upazila_spinner_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/centreCode_name_spinner_layout"
                    android:background="@drawable/bg_stroke_spinner_background">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/invigilator_date"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:background="@drawable/bg_stroke_spinner_background"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:hint="@string/invigilator_date" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="@id/invigilator_date"
                        app:layout_constraintEnd_toEndOf="@id/invigilator_date"
                        app:layout_constraintTop_toTopOf="@id/invigilator_date"
                        app:srcCompat="@drawable/date_picker"
                        tools:ignore="ContentDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/centreCode_name_spinner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toBottomOf="@id/invigilator_date_layout"
                    app:layout_constraintBottom_toTopOf="@id/centre_type_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/bg_stroke_spinner_background">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/centreCode_name_spinner"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:overlapAnchor="false"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/bg_stroke_spinner_background"
                        android:theme="@style/custom_spinner_style"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:entries="@array/centreCode_name_spinner" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="@id/centreCode_name_spinner"
                        app:layout_constraintEnd_toEndOf="@id/centreCode_name_spinner"
                        app:layout_constraintTop_toTopOf="@id/centreCode_name_spinner"
                        app:srcCompat="@drawable/spinner_arrow_drop_down"
                        tools:ignore="ContentDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/centre_type_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toBottomOf="@id/centreCode_name_spinner_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/bg_stroke_spinner_background">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/centre_type"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:overlapAnchor="false"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/bg_stroke_spinner_background"
                        android:theme="@style/custom_spinner_style"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:entries="@array/centre_type" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="@id/centre_type"
                        app:layout_constraintEnd_toEndOf="@id/centre_type"
                        app:layout_constraintTop_toTopOf="@id/centre_type"
                        app:srcCompat="@drawable/spinner_arrow_drop_down"
                        tools:ignore="ContentDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
